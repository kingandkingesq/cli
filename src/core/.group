#!/usr/bin/env CLI_NAME=cli bash-cli-part

help() {
    cat << EOF
Command
    ${CLI_COMMAND[@]}
EOF
}

main() {
    readonly CLI_CORE_REGEX_TYPE_NAME="^[a-z][a-z0-9_]*$"
    readonly CLI_CORE_REGEX_GLOBAL_NAME="^[A-Z][A-Z0-9_]*$"

    cli::core::help() {
        cat <<-EOF 

			Core Arguments
			    --name -n    [Required] : The variable name. Regex: ${CLI_CORE_REGEX_GLOBAL_NAME}.
			    --type -t               : The variable type. Regex: ${CLI_CORE_REGEX_TYPE_NAME}.
			EOF
        
        cli::help::sourceable
    }

    cli::export cli core
}
