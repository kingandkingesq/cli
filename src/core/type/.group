#!/usr/bin/env bash
source $(cli loader)
cli::import_parent_group

help() {
    cat << EOF
Command
    ${CLI_COMMAND}

Global Arguments
    --help -h        [Flag] : Show this message and exit.
    --self-test      [Flag] : Runs a self test.
EOF
}

declare CLI_CORE_TYPE_ARG_TYPE=

export() {
    cli::export::import_parent_group

    CLI_CORE_TYPE_ARG_TYPE="--type -t   [Required]  : The variable type. Regex: ${CLI_REGEX_TYPE_NAME}."
    cli::export cli core type

    declare -A CLI_META_0_ALIAS=([t]="type" )
    declare -A CLI_META_0_DEFAULT=([type]="" )
    declare -A CLI_META_0_REGEX=([type]="${CLI_REGEX_TYPE_NAME}" )
    declare -a CLI_META_0_REQUIRE=([0]="type")
    cli::export::variable::merge \
        CLI_META_0_ALIAS \
        CLI_META_0_DEFAULT \
        CLI_META_0_REGEX \
        CLI_META_0_REQUIRE
}

cli::main "$@"