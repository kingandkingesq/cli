#!/usr/bin/env CLI_NAME=cli bash-cli-part
cli::import cli core type is-modified

help() {
    cat << EOF | cli::core::type::help
Command
    ${CLI_COMMAND[@]}
    
Summary
    Return the unmodified type of a type.

Description
    Return a type without any modifiers. For example, the unmodified type of
    
        map_of map_of string

    is 

        string
EOF
}

cli::meta::declare() {
    cli::meta::allow_positional
}

::cli::core::type::unmodified::inline() {
    MAPFILE=()
    
    while ::cli::core::type::is_modified::inline "$@"; do
        shift
    done

    MAPFILE=( "$@" )
}

self_test() {
    [[ "$(${CLI_COMMAND[@]} ---mapfile boolean)" == 'boolean' ]] || cli::assert
    [[ "$(${CLI_COMMAND[@]} ---mapfile map_of map_of boolean)" == 'boolean' ]] || cli::assert
    [[ "$(${CLI_COMMAND[@]} ---mapfile string string)" == $'string\nstring' ]] || cli::assert
}
