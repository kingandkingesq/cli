#!/usr/bin/env bash
source $(cli loader)
cli::import_group
cli::import cli_assert

help() {
    cat << EOF | cli::help::global
Command
    ${CLI_COMMAND}

Summary
    Print cache directory for an unpacked command.

Arguments
    --path -p  [Required] : Path to the command.
EOF
    cat << EOF

Examples
    Print cache directory for '${CLI_COMMAND}'
        ${CLI_COMMAND} --path \$(${CLI_COMMAND} ---which)
EOF
}

import() {
    cli::meta::add_required 'path'
}

inline() {
    local name="${arg_path##*/}"
    local dir="${arg_path%/*}"
    echo "${dir}/.cli/${name}"
}

self_test() {
    ${CLI_COMMAND} --path '/base/command' \
    | assert::pipe_eq \
        '/base/.cli/command'

}

cli::main "$@"
