#!/usr/bin/env CLI_NAME=cli bash-cli-part
cli::source cli-emit

cli::emit::global_variable::help() {
    cat << EOF
Command
    ${CLI_COMMAND[@]}

Description
    Accepts output of 'declare -p' and adds a '-g' to each variable declaration.
EOF
}

main() {
    cli::emit::global_variable
}

cli::emit::global_variable() {
    sed 's/^declare/declare -g/'
}

self_test() {
    foo=42
    declare -p foo \
        | ${CLI_COMMAND[@]} \
        | assert::pipe_eq \
            'declare -g -- foo="42"'
}

cli::main "$@"
